{
  "name": "peaktime",
  "description": "피크타임",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "nativeMessaging", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["static/image/image.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "commands": {
    "save_selected_text": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "드래그한 내용 저장"
    }
  }
}